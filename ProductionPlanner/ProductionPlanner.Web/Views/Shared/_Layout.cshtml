<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductionPlanner.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 text-decoration-none" style="background-color: #04396c; color:white">
            <div class="container">
               
                
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse text-decoration-none">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item text-decoration-none px-3">
                            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index" style="color:white !important"><i class="fa fa-home" style="background-color: transparent; color: white"></i> Home</a>
                        </li>
                        <li class="nav-item text-decoration-none px-3">
                            <a class="text-decoration-none" asp-area="" asp-controller="Order" asp-action="Create" style="color:white !important"><i class="fa fa-clipboard" style="background-color: transparent; color: white"></i> New Order</a>
                        </li>
                        <li class="nav-item text-decoration-none px-3">
                            <a class="text-decoration-none" asp-area="" asp-controller="Product" asp-action="Create" style="color:white !important"><i class="fa fa-inbox " style="background-color: transparent; color: white"></i> New product</a>
                        </li>
                        <li class="nav-item text-decoration-none px-3">
                            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy" style="color:white !important"><i class="fa fa-list" style="background-color: transparent; color: white"></i> Reports</a>
                        </li>
                        <li class="nav-item text-decoration-none px-3">
                            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy" style="color:white !important"><i class="fa fa-copy" style="background-color: transparent; color: white"></i> All Orders</a>
                        </li>
                        <li class="nav-item text-decoration-none px-3">
                            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy" style="color:white !important"><i class="fa fa-archive " style="background-color: transparent; color: white"></i> All products</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Production Planner - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
