@model ProductionPlanner.Domain.Models.Order
@{
    ViewData["Title"] = "New Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pt-5 px-5 row">
    <div class="col-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="pb-3">
                <h1><b>New order</b></h1>
                <br />
                <div class="row form-group pl-4">
                    <div class="col-4">
                        <label class="control-label">Order id:</label>
                    </div>
                    <div class="col-8">
                        <input type="text" style="max-width:50%!important" />
                    </div>
                </div>
                <div class="row form-group pl-4">
                    <div class="col-4">
                        <label asp-for="OrderedProduct" class="control-label">Product name:</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="OrderedProduct" type="text" style="max-width:50%!important" />
                        <span asp-validation-for="OrderedProduct" class="text-danger"></span>
                    </div>

                </div>
                <div class="row form-group pl-4">
                    <div class="col-4">
                        <label asp-for="Quantity" class="control-label">Quantity</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Quantity" type="number" style="max-width:50%!important" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group pl-4">
                    <div class="col-4">
                        <label asp-for="EndDate" class="control-label">End date: </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EndDate" type="date" style="max-width:50%!important" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Make order" class="btn btn-primary w-75" />
            </div>
        </form>
    </div>



    <div class="col-6 border-left pl-5">
        <div class="pb-3">
            <h1><b>Existing order</b></h1>
            <br />
            <h5>Import spreadsheets with orders</h5>
            <br />
            <div>
                <input type="submit" value="Import" class="btn btn-primary w-75" />
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
