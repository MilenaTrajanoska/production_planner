@{
}
@model List<ProductionPlanner.Domain.Models.Product>

<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Materials
        </th>
        <th>
            Selling Price
        </th>
        <th>
            Total Material Cost
        </th>
        <th>
            Wage Per Hour
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                <div>
                    @foreach (var material in item.MaterialForProduct)
                    {
                        <p>@material.Material.MaterialName</p>
                    }
                </div>
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellingPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalMaterialCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WagePerHour)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>