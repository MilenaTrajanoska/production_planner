@{
}
@model List<ProductionPlanner.Domain.Models.Material>
<br>
<h1><b>All materials</b></h1>
<br>
@if (ViewBag.Errors != null)
{
    @foreach (var err in ViewBag.Errors)
    {
        <div class="alert alert-danger" role="alert">
            @err
        </div>
    }
}
@if (ViewBag.Message != null)
{

    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
<div class="row">
    <div class="col-md-6 m-4">
        <a asp-action="Index" asp-controller="Material" class="btn btn-primary">Create New Material</a>
    </div>
</div>
<table class="table">
    <tr>
        <th>
           Material Name
        </th>
        <th>
            Cost per Unit
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialName)
            </td>
            <td>
                @item.CostPerUnit.ToString("0.00") €
            </td>

            <td>
               <a asp-action="Edit" asp-controller="Material" asp-route-id="@item.Id" class="btn btn-link">Edit</a>
            </td>
        </tr>
    }

</table>